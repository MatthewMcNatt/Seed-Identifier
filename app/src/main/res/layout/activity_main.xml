<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/EnterPassword"
        android:layout_width="323dp"
        android:layout_height="61dp"
        android:layout_marginBottom="8dp"
        android:autofillHints="Enter your Password"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/enter_your_password"
        android:inputType="textPassword"
        android:textColorHint="#78909C"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/SignIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.896" />

    <EditText
        android:id="@+id/EnterUsername"
        android:layout_width="320dp"
        android:layout_height="57dp"
        android:layout_marginBottom="52dp"
        android:autofillHints="Enter your Username"
        android:ems="10"
        android:hint="@string/enter_your_username"
        android:inputType="textPassword"
        android:textColorHint="#78909C"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/EnterPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="349dp"
        android:layout_height="57dp"
        android:layout_marginBottom="151dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/seed_identifier"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/EnterUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/SignIn"
        android:layout_width="236dp"
        android:layout_height="50dp"
        android:background="@color/teal_700"
        android:text="@string/sign_in"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.754" />

    <Button
        android:id="@+id/SignUp"
        android:layout_width="242dp"
        android:layout_height="65dp"
        android:text="@string/sign_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignIn" />

    <TextView
        android:id="@+id/LoginError"
        android:layout_width="238dp"
        android:layout_height="26dp"
        android:text="@string/incorrect_username_or_password"
        android:textAlignment="center"
        android:textColor="#DD2C00"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/EnterUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>